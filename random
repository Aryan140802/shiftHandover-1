<div className="login-container">
  <div className="bubble"></div>
  <div className="bubble"></div>
  <form className="login-form" onSubmit={handleSubmit}>
    <h2>Login</h2>
    {error && <div className="error-message">{error}</div>}

    <input
      type="text"
      placeholder="Username"
      value={username}
      onChange={(e) => setUsername(e.target.value)}
      required
    />

    <div className="password-wrapper">
      <input
        type={showPassword ? "text" : "password"}
        className="password-input"
        placeholder="Password"
        value={password}
        onChange={(e) => setPassword(e.target.value)}
        required
      />
      <span
        className={`toggle-password ${showPassword ? "active" : ""}`}
        onClick={() => setShowPassword(!showPassword)}
      ></span>
    </div>
  </form>
</div>





const [showPassword, setShowPassword] = useState(false);



.password-wrapper {
  position: relative;
  width: 100%;
}

.password-input {
  width: 100%;
  padding-right: 45px;
}

/* Base eye shape */
.toggle-password {
  position: absolute;
  top: 50%;
  right: 10px;
  width: 26px;
  height: 16px;
  cursor: pointer;
  transform: translateY(-50%);
  opacity: 0.75;
  transition: opacity 0.3s ease;
}

.toggle-password:hover {
  opacity: 1;
}

/* Outer eye (arc shape) */
.toggle-password::before {
  content: "";
  position: absolute;
  inset: 0;
  border: 2px solid #888;
  border-radius: 50% / 60%;
  box-shadow: 0 0 4px rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

/* Inner pupil */
.toggle-password::after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 8px;
  height: 8px;
  background-color: #888;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: all 0.3s ease;
}

/* Active (open eye) effect */
.toggle-password.active::before {
  border-color: #00d9ff;
  box-shadow: 0 0 8px #00d9ff;
}

.toggle-password.active::after {
  background-color: #00d9ff;
  width: 10px;
  height: 10px;
}

/* Slash for hidden state (eye closed) */
.toggle-password:not(.active)::after {
  background-color: #888;
}

.toggle-password::marker {
  display: none;
}

/* Optional slash animation */
.toggle-password::before,
.toggle-password::after {
  position: absolute;
}

.toggle-password:not(.active)::before {
  background: linear-gradient(45deg, transparent 45%, #888 45%, #888 55%, transparent 55%);
  background-size: 100% 100%;
  border: none;
}

