import React, { useEffect, useState, useCallback } from 'react';
import { Menu as MenuIcon, ChevronLeft, ChevronRight, Star } from 'lucide-react';
import { cardLinkEISInfra, cardLinkSupport } from './CardLinks';
//import { apiFetchFavorites, apiUpdateFavorites } from '../utils/api'; // Import the new functions
import  { apiFetchFavorites, apiUpdateFavorites } from "../api/PostApi";

import '../styles/Menu.css';

const Sidebar = ({ darkMode, isSidebarOpen, setIsSidebarOpen }) => {
  const [searchTerm, setSearchTerm] = useState('');
  const [favorites, setFavorites] = useState([]);
  const [userId, setUserId] = useState(null);
  const [password, setPassword] = useState(null);
  const [userLevel, setUserLevel] = useState(null);
  const [cardLinks, setCardLinks] = useState([]);

  const toggleSidebar = () => setIsSidebarOpen(prev => !prev);

  // Get userId, password, and userLevel from localStorage on mount
  useEffect(() => {
    const uid = localStorage.getItem('uidd');
    const pwd = localStorage.getItem('password');
    const level = localStorage.getItem('userlevel');

    if (uid && pwd) {
      setUserId(uid);
      setPassword(pwd);
    } else {
      console.warn('No user credentials found in localStorage');
    }

    if (level) {
      setUserLevel(level);
    } else {
      console.warn('No user level found in localStorage');
    }
  }, []);

  // Set cardLinks based on userLevel
  useEffect(() => {
    if (!userLevel) return;

    const normalizedLevel = userLevel.toUpperCase();

    switch (normalizedLevel) {
      case 'ADMIN':
      case 'L2':
        setCardLinks(cardLinkEISInfra);
        break;
      case 'SUPPORT':
        setCardLinks(cardLinkSupport);
        break;
      case 'BANK':
        // Combine both arrays for Bank users
        setCardLinks([...cardLinkEISInfra, ...cardLinkSupport]);
        break;
      default:
        console.warn('Unknown user level:', userLevel);
        setCardLinks([]);
    }
  }, [userLevel]);

  // Fetch favorites from backend using the API function
  useEffect(() => {
    if (!userId || !password) return;

    const loadFavorites = async () => {
      try {
        const favArray = await apiFetchFavorites(userId, password);
        setFavorites(favArray);
      } catch (err) {
        // Error already logged in api.js, but can add component-specific logic here
      }
    };

    loadFavorites();
  }, [userId, password]);

  // Memoized function to update the backend when favorites change
  const updateFavoritesOnBackend = useCallback(async (updatedFavorites) => {
    if (!userId || !password) return;
    try {
      await apiUpdateFavorites(userId, password, updatedFavorites);
    } catch (error) {
      // Error already logged in api.js
    }
  }, [userId, password]); // Dependencies for the update function

  // Toggle favorite
  const toggleFavorite = (name) => {
    setFavorites((prev) => {
      const updated = prev.includes(name)
        ? prev.filter((fav) => fav !== name)
        : [...prev, name];

      // Call the separated and memoized backend update function
      updateFavoritesOnBackend(updated);
      return updated;
    });
  };

  // Filter and sort links
  const filteredLinks = cardLinks
    .filter((link) => link.name.toLowerCase().includes(searchTerm.toLowerCase()))
    .sort((a, b) => {
      const aFav = favorites.includes(a.name);
      const bFav = favorites.includes(b.name);
      return aFav === bFav ? 0 : aFav ? -1 : 1;
    });

  return (
    <>
      {!isSidebarOpen && (
        <button className="sidebar-toggle" onClick={toggleSidebar}>
          <MenuIcon size={24} />
        </button>
      )}

      <div className={`sidebar ${isSidebarOpen ? 'open' : 'collapsed'}`}>
        <div className="sidebar-header">
          {isSidebarOpen && <h2 className="sidebar-title">Quick Access</h2>}
          <button
            className="collapse-btn"
            onClick={toggleSidebar}
            aria-label={isSidebarOpen ? 'Collapse sidebar' : 'Expand sidebar'}
          >
            {isSidebarOpen ? <ChevronLeft size={20} /> : <ChevronRight size={20} />}
          </button>
        </div>

        {isSidebarOpen && (
          <div className="sidebar-search">
            <input
              type="text"
              placeholder="Search links..."
              value={searchTerm}
              onChange={(e) => setSearchTerm(e.target.value)}
              className="search-input"
            />
          </div>
        )}

        <div className="sidebar-content">
          <div className="sidebar-section">
            {filteredLinks.length > 0 ? (
              filteredLinks.map((link, index) => {
                const isFavorited = favorites.includes(link.name);
                return (
                  <div key={index} className="link-card">
                    <span
                      className="star-icon"
                      onClick={() => toggleFavorite(link.name)}
                      title={isFavorited ? 'Unstar' : 'Star'}
                    >
                      {isFavorited ? (
                        <Star fill="#facc15" color="#facc15" size={16} />
                      ) : (
                        <Star color="#fff" size={16} />
                      )}
                    </span>
                    <a
                      href={link.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      className="link-anchor"
                    >
                      {isSidebarOpen ? (
                        <span>{link.name}</span>
                      ) : (
                        <img
                          src={link.icon}
                          alt={link.name}
                          title={link.name}
                          className="link-icon"
                        />
                      )}
                    </a>
                  </div>
                );
              })
            ) : (
              <p className="no-links-message">No links available for your user level</p>
            )}
          </div>
        </div>
      </div>
    </>
  );
};

export default Sidebar;




