<div className="login-container">
  <div className="bubble"></div>
  <div className="bubble"></div>
  <form className="login-form" onSubmit={handleSubmit}>
    <h2>Login</h2>
    {error && <div className="error-message">{error}</div>}

    <input
      type="text"
      placeholder="Username"
      value={username}
      onChange={(e) => setUsername(e.target.value)}
      required
    />

    <div className="password-wrapper">
      <input
        type={showPassword ? "text" : "password"}
        className="password-input"
        placeholder="Password"
        value={password}
        onChange={(e) => setPassword(e.target.value)}
        required
      />
      <span
        className={`toggle-password ${showPassword ? "active" : ""}`}
        onClick={() => setShowPassword(!showPassword)}
      ></span>
    </div>
  </form>
</div>





const [showPassword, setShowPassword] = useState(false);



.password-wrapper {
  position: relative;
  width: 100%;
}

.password-input {
  width: 100%;
  padding-right: 40px; /* space for the eye icon */
}

/* The eye icon */
.toggle-password {
  position: absolute;
  top: 50%;
  right: 10px;
  width: 22px;
  height: 22px;
  cursor: pointer;
  transform: translateY(-50%);
  opacity: 0.6; /* transparent look */
}

/* Eye shape */
.toggle-password::before,
.toggle-password::after {
  content: "";
  position: absolute;
  border-radius: 50%;
  transition: 0.3s ease;
}

/* Outer eye outline */
.toggle-password::before {
  width: 100%;
  height: 60%;
  border: 2px solid #999; /* üëÅ hex color */
  border-radius: 50% / 50%;
  top: 20%;
  left: 0;
}

/* Pupil */
.toggle-password::after {
  width: 8px;
  height: 8px;
  background-color: #999; /* üëÅ pupil color */
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* Active state (eye open / visible password) */
.toggle-password.active::before {
  border-color: #00bcd4; /* light teal */
}
.toggle-password.active::after {
  background-color: #00bcd4;
}
.toggle-password:hover {
  opacity: 1; /* brighten on hover */
}
